name:                lambda-launcher
version:             0.1.0.0
build-type:          Simple
cabal-version:       >=1.10
                                                                                                                                                                                  
executable lambda-launcher
  main-is:              Main.hs
  build-depends:        base == 4.12.*
                      , process == 1.6.*
                      , directory == 1.3.*
                      , async == 2.2.*
                      , bytestring== 0.10.*
                      , gi-gobject == 2.0.*
                      , gi-glib == 2.0.*
                      , gi-gtk == 3.0.*
                      , gi-gtk-declarative == 0.4.*
                      , gi-gtk-declarative-app-simple == 0.4.*
                      , gi-gdk == 3.0.*
                      , haskell-gi == 0.21.*
                      , haskell-gi-base == 0.21.*
                      , text == 1.2.*
                      , vector == 0.12.*
                      , aeson == 1.4.*
                      , filepath == 1.4.*
                      , req == 1.2.*
                      , data-default-class == 0.1.*
  hs-source-dirs:       src
  other-modules:        Types
                      , Plugins.Main 
                      , Plugins.Support
                      , Plugins.Qalc
                      , Plugins.Sway
                      , Plugins.Files
                      , Plugins.Google
                      , Plugins.Command
                      , Plugins.Emacs
                      , Plugins.Wiki
                      , Plugins.Stackoverflow
                      , Plugins.Wmctrl
                      , Plugins.Duckduckgo
  default-language:     Haskell2010
  ghc-options:          -threaded
                        